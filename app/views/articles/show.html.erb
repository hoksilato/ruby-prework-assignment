<div class="container">
	<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-info alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= notice %>
  </div>
  <% end %>

  <dl class="dl-horizontal">
    <dt class="col-sm-1">Title:</dt>
    <dd class="col-sm-11"><%= @article.title %></dd>

    <dt class="col-sm-1">Body:</dt>
    <dd class="col-sm-11"><%= @markdown.render(@article.body).html_safe %></dd>
  </dl>

  <h4>Comments</h4>
  <% if @article.comments.count > 0 %>
    <%= render @article.comments %>
  <% else %>
    <p><em>There isn't any comments yet!</em></p>
  <% end %>

  <br>

  <h4>Add a comment:</h4>
  <%= render 'comments/form' %>

  <%= link_to 'Edit this article', edit_article_path(@article), :class => 'btn btn-warning' %>
  <%= link_to 'Back', articles_path, :class => 'btn btn-secondary' %>
</div>
